{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["DOM", "ES2020"],
    "module": "ESNext",
    "jsx": "react-jsx",
    "strict": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "moduleResolution": "bundler",
    "useDefineForClassFields": true,
    "baseUrl": "./",
    "paths": {
      "@SVG/*": ["../../lib/assets/svgs/*"],
      "@Assets/*": ["../../lib/assets/*"],
      "@/*": ["src/*"],
      "@Utils/*": ["../../lib/utils/*"],
      "@Request/*": ["../../lib/requests/*"]
    }
  },
  "include": ["src"]
}
