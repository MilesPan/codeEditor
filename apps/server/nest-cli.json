{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "entryFile": "apps/server/src/main.js",
  "compilerOptions": {
    "deleteOutDir": true,
    "tsConfigPath": "tsconfig.json",
    "assets": [{
        "include": "modules/debug/vscode-node-debug2/**/*",
        "outDir": "dist/apps/server/src",
        "watchAssets": true
      }
    ]
  }
}
